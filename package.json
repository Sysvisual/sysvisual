{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --config",
    "test:coverage": "jest --config --coverage",
    "start": "node ./dist/server.js",
    "start:dev": "nodemon",
    "start:mongo": "docker run -d -e MONGO_INITDB_ROOT_USERNAME=root -e MONGO_INITDB_ROOT_PASSWORD='example' -e MONGO_INITDB_DATABASE=sysvisual -p 27017:27017 --name sysvisual-db mongo",
    "start:grafana": "docker run -d -p 3000:3000 --name grafana grafana/grafana",
    "start:loki": "docker run -d -p 3100:3100 --name loki grafana/loki",
    "start:prometheus": "docker run --name prometheus -d -p 9090:9090 -v ./prometheus.yml:/etc/prometheus/prometheus.yml prom/prometheus",
    "start:monitoring": "npm run start:grafana & npm run start:loki & npm run start:prometheus",
    "docker:build": "docker build -t veenixdev/sysvisual:latest .",
    "eslint": "eslint"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "express-prom-bundle": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mongoose": "^6.0.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.14.0",
    "prom-client": "^15.1.3",
    "ts-node": "^10.9.2",
    "winston": "^3.15.0",
    "winston-loki": "^6.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/knex": "^0.15.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.11",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.6",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.7.0"
  }
